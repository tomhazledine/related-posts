{
    "name": "@tomhazledine/related-posts",
    "version": "1.0.2",
    "description": "A node script that adds 'related posts' information to a set of markdown files.",
    "main": "src/index.js",
    "bin": {
        "related-posts": "./build/index.js"
    },
    "type": "module",
    "scripts": {
        "related:prod": "node ./build/index.js",
        "related": "node ./src/index.js",
        "build": "node esbuild.js",
        "dev": "node esbuild.js --mode=development",
        "meta": "node esbuild.js --mode=meta",
        "prepublish": "npm run build",
        "prepublishOnly": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tomhazledine/related-posts.git"
    },
    "author": "Tom Hazledine <tom@tomhazledine.com> (https://tomhazledine.com)",
    "license": "GPL-3.0",
    "homepage": "https://github.com/tomhazledine/related-posts#readme",
    "devDependencies": {
        "esbuild": "^0.17.19"
    },
    "dependencies": {
        "gpt-tokenizer": "^2.1.2",
        "yaml": "^2.3.4"
    }
}
